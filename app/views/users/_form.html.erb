  <%= form_with(model: user) do |form| %>
    <% if user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group row m-2">
      <%= form.label :login, t('login'), class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :login, class: "form-control", placeholder: t("login") %>
      </div>
    </div>
    <div class="form-group row m-2">
      <%= form.label :user_name, t('name'), class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :user_name, class: "form-control", placeholder: t("name") %>
      </div>
    </div>
    <div class="form-group row m-2">
      <%= form.label :password, t('password'), class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.password_field :password, class: "form-control", placeholder: t("password") %>
      </div>
    </div>
    <div class="form-group row m-2">
      <%= form.label :password_confirmation, t('check_password'), class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: t("check_password") %>
      </div>
    </div>
    <div class="form-group row m-2">
      <%= form.label :position, t('status'), class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.select :position, options_for_select([ "физическое лицо", "индивидуальный предприниматель", "юридическое лицо" ], "физическое лицо"), class: "form-control" %> <br>
      </div>
    </div>
    <div class="form-group row m-2">
      <%= form.submit id: "log_button", class: "btn-warning" %>
    </div>
  <% end %>

